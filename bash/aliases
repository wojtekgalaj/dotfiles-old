alias reset-tunnel="tunnel-kill && tunnel"
alias gulp="nocorrect gulp"
alias jspm='nocorrect jsmp'

appStart() {
  local APP_DIR="$HOME/dev/geoblink"
  export NODE_ENV="local"
  [ -d "$APP_DIR" ] && npm run local --prefix $APP_DIR
}

alias tunnel="ssh -fN dev-tunnel-postgresql && ssh -fN dev-tunnel-redis && ssh -fN dev-tunnel-mongodb"
alias tunnel-kill="pkill -f dev-tunnel"

alias app-go="tunnel-kill && tunnel && appStart"
